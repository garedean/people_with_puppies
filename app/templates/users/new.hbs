<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form>
      <div class="form-group">
        <label for="title">Name</label>
        {{input value=user_name class="form-control"}}
      </div>

      <div class="form-group">
        <label for="title">Bio</label>
        {{input value=user_bio class="form-control"}}
      </div>

      <div class="form-group">
        <label for="title">Picture (as url)</label>
        {{input value=user_pic class="form-control"}}
      </div>

      <div class="form-group">
        <label for="title">Location</label>
        {{input value=user_location class="form-control"}}
      </div>

      <div class="form-group">
        <label for="title">Interested in</label>
        {{input value=user_interests class="form-control"}}
      </div>

      <button class="btn btn-lg btn-primary centered" {{action 'save'}}>Save</button>
    </form>
  </div>
</div>
